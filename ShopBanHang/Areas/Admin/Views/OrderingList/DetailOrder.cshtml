
@{
    ViewBag.Title = "Chi tiết đơn hàng đang chờ- Thời trang 360";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
@{
    var  OrderList = ViewBag.OrderList as List<ShopBanHang.Models.ConfirmOrder>;
    var i = 1;
}
<div class="col-md-12">
    <div class="card card-plain">
        <div class="card-header">
            <h4 class="card-title">Chi tiết đơn hàng</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                        <tr>
                            <th>
                                Số thứ tự
                            </th>
                            <th>
                                Tên sản phẩm
                            </th>
                            <th>
                                Size
                            </th>
                            <th>
                                Số lượng
                            </th>

                            <th>
                                Giá sản phẩm
                            </th>
                            <th>
                                Thành tiền
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in OrderList)
                        {
                        <tr>
                            <td>
                                @(i++)
                            </td>
                            <td>
                                <img src="@item.Image_Product" height="30" />
                                @item.Name_Product
                            </td>
                            <td>
                                @item.Size_Product
                            </td>
                            <td>
                                @item.Amount_Product
                            </td>

                            <td>
                                @item.Current_Price
                            </td>

                            <td>@item.Total</td>

                        </tr>
                        }
                        <tr>
                            <td colspan="5"><strong>Chú ý</strong>: @OrderList[0].Note</td>
                        </tr>
                        <tr>
                            <td style="text-align:center;color:red" colspan=4>Tổng thanh toán</td>
                            <td>@ViewBag.totalList</td>
                        </tr>
                        <tr>
                            <td colspan="4"></td>
                            <td><a href="/Admin/OrderingList/ConfirmOrder?ID_Order=@OrderList[0].ID_Order" class="btn btn-success">Xác nhận</a></td>
                        </tr>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</div>

